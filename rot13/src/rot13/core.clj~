(ns rot13.core
  (:gen-class :extends javax.servlet.http.HttpServlet)
  (:use compojure.core
        ring.util.servlet
        net.cgrand.enlive-html)
  (:require [compojure.route :as route]))

(def page
  "<html>
  <head>
    <title>Unit 2 Rot 13</title>
  </head>

  <body>
    <h2>Enter some text to ROT13:</h2>
    <form method=\"post\">
      <textarea name=\"text\"
                style=\"height: 100px; width: 400px;\"></textarea>
      <br>
      <input type=\"submit\">
    </form>
  </body>
  </html>")

(deftemplate paget (java.io.StringReader. page) 

(defroutes rot13
  (GET "/" [] page)
  (POST "/" [text] (print text))
  (route/not-found "Page not found"))

(defservice rot13)

